@model IEnumerable<prjJapanTravel_BackendMVC.ViewModels.OrderViewModels.TicketOrderDetailViewModel>

@{
    ViewData["Title"] = "Details";
}

<h1>訂單明細</h1>
@* <h2>@Html.DisplayFor(modelItem => item.訂單編號)</h2> *@

<p>
    <a asp-action="List" class="btn btn-outline-info">返回</a>
</p>
<table class="table">
    <thead>
        <tr style="font-size:20px">
            <th>
                序
            </th>
            <th>
                @Html.DisplayNameFor(model => model.出發地點)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.抵達地點)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.航線描述)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.數量)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.單價)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.總金額)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.優惠券名稱)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.優惠金額)
            </th>
        </tr>
    </thead>
    <tbody>
        @{
            int count = 0;
            foreach (var item in Model) {
                count++;
        <tr>
            <td>
                @count
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.出發地點)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.抵達地點)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.航線描述)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.數量)
            </td>
            <td>
                @item.單價.ToString("###,###,#0")
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.優惠券名稱)
            </td>
            <td>
                @(item.優惠金額.HasValue ? item.優惠金額.Value.ToString("N0") : "0")
            </td>
            <td>
                @item.總金額.ToString("###,###,#0")
            </td>
        </tr>
}}
    </tbody>
</table>

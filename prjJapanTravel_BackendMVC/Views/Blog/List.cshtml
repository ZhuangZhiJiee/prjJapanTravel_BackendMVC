@model IEnumerable<prjJapanTravel_BackendMVC.ViewModels.BlogViewModels.ArticleMainViewModel>


@{
    ViewData["Title"] = "List";
}

<h1>文章一覽表</h1>

<p>
    <a asp-action="Create">新增文章</a>
</p>
<table class="table table-striped">
    <thead>
        <tr>
            <th>
                文章編號
            </th>
            <th>
                @Html.DisplayNameFor(model => model.會員編號)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.文章狀態)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.文章標題)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.文章發布時間)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.文章最後更新時間)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.文章內容)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @{
            int count = 0; 
            foreach (var item in Model) {
                count++;
        <tr>
            <td>
                @count
            </td>
            <td>
                        @Html.DisplayFor(modelItem => item.會員編號)
            </td>
            <td>
                        @Html.DisplayFor(modelItem => item.文章狀態)
            </td>
            <td>
                        @Html.DisplayFor(modelItem => item.文章標題)
            </td>
            <td>
                        @Html.DisplayFor(modelItem => item.文章發布時間)
            </td>
            <td>
                        @Html.DisplayFor(modelItem => item.文章最後更新時間)
            </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.文章內容)
                    </td>
            <td>
                        @Html.ActionLink("修改", "Edit", "Blog", new { id = item.文章編號 }, null) |
                        @Html.ActionLink("刪除", "Delete", "Blog", new { id = item.文章編號 }, null)
            </td>
        </tr>
}
}
    </tbody>
</table>

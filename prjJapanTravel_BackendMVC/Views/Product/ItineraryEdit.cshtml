@model prjJapanTravel_BackendMVC.ViewModels.ProductViewModels.ItineraryListViewModel

@{
    ViewData["Title"] = "修改行程";
}

<h1>修改行程</h1>

<hr />
<div class="row">
        <!-- 捲動容器 -->
        <div style="max-height: 600px; margin-left:10px; overflow-y: auto;">

            <!-- 表單 -->
            <form asp-action="ItineraryEdit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <!-- Hidden field for itinerary system ID -->
                <input asp-for="行程系統編號" type="hidden" />

                <!-- 行程編號 -->
                <div class="form-group">
                    <label asp-for="行程編號" class="control-label"></label>
                    <input asp-for="行程編號" class="form-control" />
                    <span asp-validation-for="行程編號" class="text-danger"></span>
                </div>

                <!-- 行程名稱 -->
                <div class="form-group">
                    <label asp-for="行程名稱" class="control-label"></label>
                    <input asp-for="行程名稱" class="form-control" />
                    <span asp-validation-for="行程名稱" class="text-danger"></span>
                </div>

                <!-- 體驗項目編號 -->
                <div class="form-group">
                    <label asp-for="體驗項目編號" class="control-label"></label>
                    <input asp-for="體驗項目編號" class="form-control" />
                    <span asp-validation-for="體驗項目編號" class="text-danger"></span>
                </div>

                <!-- 體驗項目 -->
                <div class="form-group">
                    <label asp-for="體驗項目" class="control-label"></label>
                    <input asp-for="體驗項目" class="form-control" />
                    <span asp-validation-for="體驗項目" class="text-danger"></span>
                </div>

                <!-- 總團位 -->
                <div class="form-group">
                    <label asp-for="總團位" class="control-label"></label>
                    <input asp-for="總團位" class="form-control" />
                    <span asp-validation-for="總團位" class="text-danger"></span>
                </div>

                <!-- 價格 -->
                <div class="form-group">
                    <label asp-for="價格" class="control-label"></label>
                    <input asp-for="價格" class="form-control" />
                    <span asp-validation-for="價格" class="text-danger"></span>
                </div>

                <!-- 體驗主題編號 -->
                <div class="form-group">
                    <label asp-for="體驗主題編號" class="control-label"></label>
                    <input asp-for="體驗主題編號" class="form-control" />
                    <span asp-validation-for="體驗主題編號" class="text-danger"></span>
                </div>

                <!-- 體驗主題 -->
                <div class="form-group">
                    <label asp-for="體驗主題" class="control-label"></label>
                    <input asp-for="體驗主題" class="form-control" />
                    <span asp-validation-for="體驗主題" class="text-danger"></span>
                </div>

                <!-- 地區編號 -->
                <div class="form-group">
                    <label asp-for="地區編號" class="control-label"></label>
                    <input asp-for="地區編號" class="form-control" />
                    <span asp-validation-for="地區編號" class="text-danger"></span>
                </div>

                <!-- 地區 -->
                <div class="form-group">
                    <label asp-for="地區" class="control-label"></label>
                    <input asp-for="地區" class="form-control" />
                    <span asp-validation-for="地區" class="text-danger"></span>
                </div>

                <!-- 行程圖片編號 -->
                <div class="form-group">
                    <label asp-for="行程圖片編號" class="control-label"></label>
                    <input asp-for="行程圖片編號" class="form-control" />
                    <span asp-validation-for="行程圖片編號" class="text-danger"></span>
                </div>

                <!-- 行程圖片 -->
                <div class="form-group">
                    <label asp-for="行程圖片" class="control-label"></label>
                    <input asp-for="行程圖片" class="form-control" />
                    <span asp-validation-for="行程圖片" class="text-danger"></span>
                </div>

                <!-- 行程詳情 -->
                <div class="form-group">
                    <label asp-for="行程詳情" class="control-label"></label>
                    <input asp-for="行程詳情" class="form-control" />
                    <span asp-validation-for="行程詳情" class="text-danger"></span>
                </div>

                <!-- 行程簡介 -->
                <div class="form-group">
                    <label asp-for="行程簡介" class="control-label"></label>
                    <input asp-for="行程簡介" class="form-control" />
                    <span asp-validation-for="行程簡介" class="text-danger"></span>
                </div>

                <!-- 行程注意事項 -->
                <div class="form-group">
                    <label asp-for="行程注意事項" class="control-label"></label>
                    <input asp-for="行程注意事項" class="form-control" />
                    <span asp-validation-for="行程注意事項" class="text-danger"></span>
                </div>

                <!-- 提交和取消按鈕 -->
                <div class="form-group">
                    <input type="submit" value="送出" class="btn btn-primary" />
                    <a asp-action="List" class="btn btn-secondary">取消</a>
                </div>
            </form>
        </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

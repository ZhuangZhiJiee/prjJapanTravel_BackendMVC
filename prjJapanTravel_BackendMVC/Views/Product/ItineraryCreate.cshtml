<body>
    @using (Html.BeginForm("ItineraryCreate", "Product", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        <nav style="background-color: lightblue; height: 100px; margin-top: 0; margin-bottom: 10px;">
            <h1 style="text-align: center; margin: 0; padding-top: 30px;">新增體驗行程</h1>
        </nav>
        <div style="margin-bottom: 10px;">
            <label for="text">行程編號</label>
            <input type="text" name="行程編號">

            <label for="text">行程名稱</label>
            <input type="text" name="行程名稱">

            <label for="text">總團位</label>
            <input type="text" name="總團位" style="width: 100px;">

            <label for="text">價格</label>
            <input type="text" name="價格" style="width: 100px;">
        </div>
        <div style="margin-bottom: 10px;">
            <label>地區</label>
            <select name="AreaSystem.AreaSystemId" id="">
                <option value="">請選擇區域</option>
                @foreach (var item in Model.areaList)
                {
                    <option value="@item.AreaSystemId">@item.AreaName</option>
                }
            </select>
        </div>
        <div style="margin-bottom: 10px;">
            <label for="exampleDataList" class="form-label">體驗</label>
            @* <input class="form-control" list="datalistOptions" id="exampleDataList" placeholder="請輸入體驗關鍵字"> *@
            <select name="ActivitySystem.ActivitySystemId">
                <option value="">請選擇體驗項目</option>
                @foreach (var item in Model.activityList)
                {
                    <option value="@item.ActivitySystemId">@item.ActivityName</option>
                }
            </select>
        </div>
        <div style="margin-bottom: 10px;">
            <label>請選擇出發日期</label>
            <input type="date" id="departureDateInput">
            <button type="button" onclick="addDepartureDate()">添加日期</button>
            <label>出發日期</label>
            <table id="departureDateTable">
                <tbody>
                    <!-- 新增的日期會被插入到這裡 -->
                </tbody>
            </table>
        </div>
        <div style="margin-bottom: 10px;">
            <label>上傳圖片</label>
            <input type="file" id="fileInput" name="imageViewModel[0].ImageFile" multiple="multiple" />
        </div>
        <div>
            <label>圖片預覽</label>
            <img id="output" height="200" style="display:none">
        </div>
        <br />
        <div style="margin-bottom: 10px;">
            <div style="margin-bottom: 10px;">
                <label>圖片名稱</label>
                <input type="text" name="imageViewModel[0].ImageName" />
            </div>
            <div>
                <label style="vertical-align: top;">圖片描述</label>
                <textarea name="imageViewModel[0].ImageDetail" rows="7" cols="99"></textarea>
            </div>
        </div>
        @* <button type="button" id="addImageButton">+</button> <!-- 按鈕來新增欄位 -->
        <div id="imagePreviewContainer"></div> *@
        <div class="form-group">
            <div style="margin-bottom: 10px;">
                <label>行程簡介</label>
                <input type="text" name="行程簡介" value="" />
            </div>
            <div>
                <label style="vertical-align: top;">行程詳情</label>
                <textarea name="行程詳情" rows="7" cols="99"></textarea>
            </div>
            <div>
                <label style="vertical-align: top;">行程注意事項</label>
                <textarea name="行程注意事項" rows="7" cols="99"></textarea>
            </div>
        </div>
        <div>
            <input type="submit" value="送出" class="btn btn-primary" />
            <a asp-action="List">取消</a>
        </div>
    }
</body>

</html>

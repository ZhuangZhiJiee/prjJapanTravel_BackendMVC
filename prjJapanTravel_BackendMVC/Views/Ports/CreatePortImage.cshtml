@model prjJapanTravel_BackendMVC.Models.PortImage

@{
    ViewData["Title"] = "新增港口圖片";
}

<h2>新增港口圖片</h2>
<hr />

<div class="row">
    <div class="col-md-6">
        <form asp-action="CreatePortImage" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <!-- 選擇港口 -->
            <div class="form-group mb-3">
                <label asp-for="PortId" class="form-label">選擇港口</label>
                <select asp-for="PortId" class="form-control" asp-items="@(new SelectList(ViewBag.Ports, "PortId", "PortName"))">
                    <option value="">請選擇港口</option>
                </select>
                <span asp-validation-for="PortId" class="text-danger"></span>
            </div>

            <!-- 圖片上傳 -->
      @*       <div class="form-group mb-3">
                <label asp-for="PortImageUrl" class="form-label">上傳圖片</label>
                <input type="file" asp-for="PortImageUrl" class="form-control" />
                <span asp-validation-for="PortImageUrl" class="text-danger"></span>
            </div> *@

            <!-- 圖片描述 -->
            <div class="form-group mb-3">
                <label asp-for="PortImageDes" class="form-label">圖片描述</label>
                <input asp-for="PortImageDes" class="form-control" placeholder="輸入圖片描述" />
                <span asp-validation-for="PortImageDes" class="text-danger"></span>
            </div>

            <!-- 提交按鈕 -->
            <div class="form-group">
                <button type="submit" class="btn btn-primary">新增圖片</button>
                <a asp-action="Index" class="btn btn-secondary ms-2">返回列表</a>
            </div>
        </form>
    </div>
</div>


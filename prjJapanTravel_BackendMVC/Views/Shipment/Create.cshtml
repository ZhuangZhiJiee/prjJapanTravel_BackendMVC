@model prjJapanTravel_BackendMVC.Models.Route

<h2>Create</h2>

<form asp-action="Create">
    <div class="form-group">
        <label asp-for="OriginPortId"></label>
        <select asp-for="OriginPortId" class="form-control" asp-items="@(new SelectList(ViewBag.Ports, "PortId", "PortName"))"></select>
    </div>
    <div class="form-group">
        <label asp-for="DestinationPortId"></label>
        <select asp-for="DestinationPortId" class="form-control" asp-items="@(new SelectList(ViewBag.Ports, "PortId", "PortName"))"></select>
    </div>
    <div class="form-group">
        <label asp-for="Price"></label>
        <input asp-for="Price" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="RouteDescription"></label>
        <input asp-for="RouteDescription" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">Create</button>
</form>

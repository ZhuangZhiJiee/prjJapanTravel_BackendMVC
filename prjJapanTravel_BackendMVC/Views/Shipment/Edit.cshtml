@model prjJapanTravel_BackendMVC.Models.Route

<h2>Edit</h2>

<form asp-action="Edit">
    <input type="hidden" asp-for="RouteId" />
    <div class="form-group">
        <label asp-for="OriginPortId"></label>
        <select asp-for="OriginPortId" class="form-control" asp-items="@(new SelectList(ViewBag.Ports, "PortId", "PortName", Model.OriginPortId))"></select>
    </div>
    <div class="form-group">
        <label asp-for="DestinationPortId"></label>
        <select asp-for="DestinationPortId" class="form-control" asp-items="@(new SelectList(ViewBag.Ports, "PortId", "PortName", Model.DestinationPortId))"></select>
    </div>
    <div class="form-group">
        <label asp-for="Price"></label>
        <input asp-for="Price" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="RouteDescription"></label>
        <input asp-for="RouteDescription" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">儲存變更</button>
</form>
<div>
    <a asp-action="Index" class="btn btn-secondary">取消並返回</a>
</div>

<h1>航線詳細資訊</h1>

<h4>航線圖片</h4>
<a asp-action="RouteImages" asp-route-routeId="@Model.Route.RouteId">管理航線圖片</a>

<h4>排班資訊</h4>
<a asp-action="Schedules" asp-route-routeId="@Model.Route.RouteId">管理排班</a>

<h4>航班排班</h4>
<table>
    <thead>
        <tr>
            <th>出發時間</th>
            <th>到達時間</th>
            <th>座位數</th>
            <th>操作</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var schedule in Model.Schedules)
        {
            <tr>
                <td>@schedule.DepartureTime</td>
                <td>@schedule.ArrivalTime</td>
                <td>@schedule.Seats</td>
                <td>
                    <a asp-action="EditSchedule" asp-route-id="@schedule.ScheduleId">編輯</a> |
                    <form asp-action="DeleteSchedule" method="post" style="display:inline;">
                        <input type="hidden" name="id" value="@schedule.ScheduleId" />
                        <button type="submit" class="btn btn-danger">刪除</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

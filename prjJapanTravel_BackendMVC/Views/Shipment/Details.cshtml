@model prjJapanTravel_BackendMVC.ViewModels.RouteDetailsViewModel

<h1>航線詳細資訊</h1>

<!-- 第一塊：Route 資訊 -->
<div>
    <h2>航線資訊</h2>
    <p><strong>出發港口:</strong> @Model.OriginPortName</p>
    <p><strong>目的地港口:</strong> @Model.DestinationPortName</p>
    <p><strong>票價:</strong> @Model.Price</p>
    <p><strong>航線描述:</strong> @Model.RouteDescription</p>
</div>

<!-- 第二塊：Schedule 列表 -->
<div>
    <h2>航班排程</h2>
    <p>
        <a asp-action="CreateSchedule">Create New</a>
    </p>

    <table class="table">
        <thead>
            <tr>
                <th>出發時間</th>
                <th>到達時間</th>
                <th>座位數</th>
                <th>操作</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var schedule in Model.Schedules)
            {
                <tr>
                    <td>@schedule.DepartureTime</td>
                    <td>@schedule.ArrivalTime</td>
                    <td>@schedule.Seats</td>
                    <td>
                        <a asp-action="EditSchedule" asp-route-id="@schedule.ScheduleId">編輯</a> |
                        <a asp-action="DeleteSchedule" asp-route-id="@schedule.ScheduleId">刪除</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <a asp-action="CreateSchedule" asp-route-id="@Model.RouteId">新增排班</a>
</div>

<!-- 第三塊：圖片列表 -->
<div>
    <h3>航線圖片</h3>
    <div>
        @foreach (var image in Model.RouteImages)
        {
            <div>
                <img src="data:image/jpeg;base64,@image.RouteImageBase64" alt="航線圖片" width="200" />
                <p>@image.RouteImageDescription</p>
            </div>
        }
    </div>
</div>
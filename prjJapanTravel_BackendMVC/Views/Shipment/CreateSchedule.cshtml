@model prjJapanTravel_BackendMVC.Models.Schedule

<h2>新增航班排程</h2>

<form asp-action="CreateSchedule">
    <div class="form-group">
        <label asp-for="DepartureTime">出發時間</label>
        <input asp-for="DepartureTime" class="form-control" type="datetime-local" />
    </div>

    <div class="form-group">
        <label asp-for="ArrivalTime">到達時間</label>
        <input asp-for="ArrivalTime" class="form-control" type="datetime-local" />
    </div>

    <div class="form-group">
        <label asp-for="Seats">座位數</label>
        <input asp-for="Seats" class="form-control" type="number" />
    </div>

    <div class="form-group">
        <label asp-for="Capacity">載客量</label>
        <input asp-for="Capacity" class="form-control" type="number" />
    </div>

    <input type="hidden" asp-for="RouteId" />

    <button type="submit" class="btn btn-primary">新增排班</button>
</form>
<a asp-action="Details" asp-route-id="@Model.RouteId">返回</a>

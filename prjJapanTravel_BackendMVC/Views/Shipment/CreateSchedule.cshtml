@model prjJapanTravel_BackendMVC.Models.Schedule

@{
    ViewData["Title"] = "Create Schedule";
}

<h1>Create New Schedule</h1>

<div class="row">
    <div class="col-md-6">
        <form asp-action="CreateSchedule">
            <!-- RouteId 手動輸入 -->
            <div class="form-group">
                <label asp-for="RouteId" class="control-label">航線編號</label>
                <input asp-for="RouteId" class="form-control" placeholder="Enter Route ID" />
                <span asp-validation-for="RouteId" class="text-danger"></span>
            </div>

            <!-- Departure Time -->
            <div class="form-group">
                <label asp-for="DepartureTime" class="control-label">出發時間</label>
                <input asp-for="DepartureTime" class="form-control"
                       placeholder="Enter Departure Time"
                       value="@Model.DepartureTime.ToString("yyyy-MM-dd HH:mm")" /> <!-- 顯示到分鐘 -->
                <span asp-validation-for="DepartureTime" class="text-danger"></span>
            </div>

            <!-- Arrival Time -->
            <div class="form-group">
                <label asp-for="ArrivalTime" class="control-label">到達時間</label>
                <input asp-for="ArrivalTime" class="form-control"
                       placeholder="Enter Arrival Time"
                       value="@Model.ArrivalTime.ToString("yyyy-MM-dd HH:mm")" /> <!-- 顯示到分鐘 -->
                <span asp-validation-for="ArrivalTime" class="text-danger"></span>
            </div>

            <!-- Seats -->
            <div class="form-group">
                <label asp-for="Seats" class="control-label">剩餘座位數</label>
                <input asp-for="Seats" class="form-control" placeholder="Enter Seats Available" />
                <span asp-validation-for="Seats" class="text-danger"></span>
            </div>

            <!-- Capacity -->
            <div class="form-group">
                <label asp-for="Capacity" class="control-label">總座位數</label>
                <input asp-for="Capacity" class="form-control" placeholder="Enter Capacity" />
                <span asp-validation-for="Capacity" class="text-danger"></span>
            </div>

            <!-- Submit Button -->
            <div class="form-group">
                <input type="submit" value="儲存並新增" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-secondary">返回</a>
</div>

@model prjJapanTravel_BackendMVC.Models.Schedule

Edit Schedule</h1>
<form asp-action="EditSchedule">
    <input type="hidden" asp-for="ScheduleId" /> <!-- 隱藏的 ScheduleId 欄位 -->

    <div class="form-group">
        <label asp-for="DepartureTime" class="control-label">Departure Time</label>
        <input asp-for="DepartureTime" class="form-control" placeholder="Enter Departure Time" />
        <span asp-validation-for="DepartureTime" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="ArrivalTime" class="control-label">Arrival Time</label>
        <input asp-for="ArrivalTime" class="form-control" placeholder="Enter Arrival Time" />
        <span asp-validation-for="ArrivalTime" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Seats" class="control-label">Seats Available</label>
        <input asp-for="Seats" class="form-control" placeholder="Enter Seats Available" />
        <span asp-validation-for="Seats" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Capacity" class="control-label">Capacity</label>
        <input asp-for="Capacity" class="form-control" placeholder="Enter Capacity" />
        <span asp-validation-for="Capacity" class="text-danger"></span>
    </div>

    <div class="form-group">
        <input type="submit" value="Save Changes" class="btn btn-primary" />
    </div>
</form>


<div>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>

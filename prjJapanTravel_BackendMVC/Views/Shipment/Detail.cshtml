@model RouteDetailViewModel

<h2>Route Details</h2>
<p>Route ID: @Model.RouteId</p>
<p>Origin: @Model.OriginPortName</p>
<p>Destination: @Model.DestinationPortName</p>
<p>Price: @Model.Price</p>
<p>Description: @Model.RouteDescription</p>

<hr />

<h3>Images</h3>
<table>
    <thead>
        <tr>
            <th>Image ID</th>
            <th>Description</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var image in Model.RouteImages)
        {
            <tr>
                <td>@image.RouteImageId</td>
                <td>@image.Description</td>
                <td>
                    <a asp-action="EditImage" asp-route-id="@image.RouteImageId">Edit</a> |
                    <a asp-action="DeleteImage" asp-route-id="@image.RouteImageId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="CreateImage" asp-route-id="@Model.RouteId">Add New Image</a>

<hr />

<h3>Schedules</h3>
<table>
    <thead>
        <tr>
            <th>Schedule ID</th>
            <th>Date</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var schedule in Model.Schedules)
        {
            <tr>
                <td>@schedule.ScheduleId</td>
                <td>@schedule.Date</td>
                <td>
                    <a asp-action="EditSchedule" asp-route-id="@schedule.ScheduleId">Edit</a> |
                    <a asp-action="DeleteSchedule" asp-route-id="@schedule.ScheduleId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="CreateSchedule" asp-route-id="@Model.RouteId">Add New Schedule</a>

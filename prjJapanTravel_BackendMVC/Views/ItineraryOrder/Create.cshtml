        async function updateDepartureDates() {
            const itineraryId = document.getElementById("ItinerarySystemId").value;

            // 透過 AJAX 請求獲取對應的出發日期
            const response = await fetch(`/api/getDepartureDates?itineraryId=${itineraryId}`);

            if (response.ok) {
                const departureDates = await response.json();

                const departureDateSelect = document.getElementById("ItineraryDateSystemId");
                departureDateSelect.innerHTML = '<option value="">-- 請選擇行程日期 --</option>'; // 清空選項

                departureDates.forEach(date => {
                    const option = document.createElement("option");
                    option.value = date.ItineraryDateSystemId;
                    option.textContent = date.DepartureDate;
                    departureDateSelect.appendChild(option);
                });
            } else {
                console.error('獲取出發日期失敗');
            }
        }
    </script>
